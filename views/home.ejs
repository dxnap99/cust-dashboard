<%- include("component/headers.ejs") %>
    <main class="w-[90%] mx-auto my-4">
        <nav class="flex w-[300px] mx-auto flex justify-center border p-3 rounded-xl bg-gray-300"
            aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                <li class="inline-flex items-center">
                    <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                        <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                            fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z" />
                        </svg>
                        Home
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m1 9 4-4-4-4" />
                        </svg>
                        <a href="/tambahakun"
                            class="ms-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ms-2">
                            Tambah
                            akun
                        </a>
                    </div>
                </li>
            </ol>
        </nav>

        <div class="flex w-[350px] mx-auto gap-2 mt-5">
            <input id="searching" type="text" value="" placeholder="search"
                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
            <button id="search" class="w-[50px] text-white mx-auto bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none
            focus:ring-blue-300 font-medium rounded-lg text-sm text-center flex items-center justify-center w-[100px]">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                </svg>
            </button>
        </div>

        <div class="w-[350px] lg:w-[500px] mx-auto mt-5 flex flex-row flex-wrap justify-center items-center text-white">
            <a href="/?category=FREE" class="p-3 bg-green-500  font-bold flex items-center">
                FREE
                <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="m1 9 4-4-4-4" />
                </svg>
            </a>
            <a href="/?category=ORDERAN" class="p-3 bg-blue-500 font-bold flex items-center">
                ORDERAN
                <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="m1 9 4-4-4-4" />
                </svg>
            </a>
            <a href="/?category=INVALID" class="p-3 bg-red-500 font-bold flex items-center">
                INVALID
                <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="m1 9 4-4-4-4" />
                </svg>
            </a>
            <a href="/?category=WIPE" class="p-3 bg-purple-500 font-bold flex items-center">
                WIPE
                <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="m1 9 4-4-4-4" />
                </svg>
            </a>
            <a href="/?category=MOVE" class="p-3 bg-yellow-500 font-bold flex items-center">
                MOVE

            </a>
        </div>



        <div class="relative overflow-x-auto shadow-xl sm:rounded-lg mt-4 border-t-2">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 ">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            No.
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Email
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Password
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Group Name
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Status
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Order date
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Expired date
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% for(const [index,items] of data.entries()) { %>
                        <tr class=" border-b">
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                <%= index + 1 %>
                            </th>
                            <td id="email" class="px-6 py-4">
                                <%= items.email %>
                            </td>
                            <td class="px-6 py-4">
                                <%= items.password %>
                            </td>
                            <td class="px-6 py-4">
                                <%= items.groupName %>
                            </td>
                            <td class="px-6 py-4">
                                <%= items.status %>
                            </td>
                            <td class="px-6 py-4">
                                <%= items.orderDate %>
                            </td>
                            <td class="px-6 py-4">
                                <%= items.expiredDate %>
                            </td>
                            <td class="px-6 py-4 flex gap-3">
                                <a href="/editaccount/<%= items._id %>"
                                    class="font-medium text-blue-600 hover:underline">Edit</a>
                                <a href="/deleteaccount/<%= items._id  %>"
                                    class="font-medium text-red-600 hover:underline">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>

    </main>

    <script>
        $(document).ready(() => {
            $("#search").click(() => {
                var searchText = $('#searching').val()
                let paragraphs = document.querySelectorAll('#email');
                for (const p of paragraphs) {
                    const txt = p.textContent
                    if (txt.includes(searchText)) {
                        p.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        p.classList.add('bg-blue-400');
                        break
                    }
                }
            })
        })
    </script>
    <%- include("component/footer.ejs") %>